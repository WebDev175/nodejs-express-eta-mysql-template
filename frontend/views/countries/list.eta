<h1>Countries</h1>
<% const countries = Array.isArray(it.countries) ? it.countries : []; %>

<ul class="countries-list">
	<% countries.forEach(c => { %>
	<li>
		<a
			href="/countries/<%= c.country_name.toLowerCase() %>"
			class="country-link"
			title="<%= `${c.country_name} (${c.region_name})` %>"
		>
			<%= c.country_name %>
		</a>
	</li>
	<% });%>
</ul>
